#import some python functions 
import random
import getpass

#define a function called guees_number 
def guess_number():
#ask for range entry 
    print("Player 1, enter the range of the numbers")
    print("Player 2, guess the random number")
    print("#####################################################################")
    print("Player 1, choose the range for the random integer number.")
    print("The numbers you enter will not be visible, remember them!")
#whit getpass the numbers are not visible 
    number1 = int(getpass.getpass("Enter the first number: ", stream=None))
    number2 = int(getpass.getpass("Enter the second number: ", stream=None))
#with randit we create a random number from the selected range 
    random_number = random.randint(number1, number2)
    points = 100
# create a loop in which if you make a mistake, we lower your score by ten points and if you win, a congratulatory message is sent. 
    while True:
        print("Guess the random number!")
        guess = int(input("Guess the number: "))

        if guess == random_number:
            print("Congratulations! You guessed the random number!")
            print("Player 2 has won!!")
            break
        else:
            print("Incorrect!")
            points -= 10
            if points == 0:
                print("You have lost all your points!")
                print("Player 1 has won!")
                break
            elif guess < random_number:
                print("The number is greater. You lose 10 points. Remaining points:", points)
            else:
                print("The number is smaller. You lose 10 points. Remaining points:", points)

    print("Game over.")
# send to call the start function 
guess_number()
